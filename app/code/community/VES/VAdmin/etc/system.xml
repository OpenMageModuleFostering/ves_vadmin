<?xml version="1.0"?>
<config>
	<tabs>
        <ves translate="label">
            <label>VnEcoms</label>
            <sort_order>400</sort_order>
        </ves>
    </tabs>
    
    <sections>
        <vadmin translate="label" module="vadmin">
            <label>V-Admin Theme</label>
            <tab>ves</tab>
            <frontend_type>text</frontend_type>
            <sort_order>1</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>                
                <config>
                    <label>General</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>10</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                    	<enabled>
                    		<label>Enable V-Admin Theme</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                    	</enabled>
                    </fields>
                </config>
                <author>
                	<label>Author</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>30</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <comment><![CDATA[
                    The V-Admin Theme is developed and supported by <a href="http://www.vnecoms.com/" target="_blank">www.VnEcoms.com</a>.<br />
					If you need any support or have any question please contact us at <a href="mailto:support@vnecoms.com">support@vnecoms.com</a> or submit a ticket at <a href="http://www.vnecoms.com/contacts/" target="_blank">http://www.vnecoms.com/contacts/</a><br /><br />
					Best Regards,<br />
					<strong>VnEcoms Team</strong>
					]]></comment>
                </author>
			</groups>
        </vadmin>
    </sections>
</config>
